@model List<PrjWebDev2311695.Models.City>
@{
    ViewData["Title"] = "City Search";
    var city = (string)(ViewBag.City ?? "");
    var province = (string)(ViewBag.Province ?? "");
}

<h2>Search for one or many cities:</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" method="get">
            <div class="form-group">
                <label for="CityName" class="control-label">City Name</label>
                <input id="CityName" name="city" class="form-control" value="@city" />
            </div>

            <div class="form-group">
                <label for="Province" class="control-label">Province</label>
                <input id="Province" name="province" class="form-control" value="@province" />
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-action="Search" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <table class="table table-bordered table-sm mt-3">
        <thead>
            <tr>
                <th>City</th>
                <th>Province</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.CityName</td>
                    <td>@x.Province</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-3"><i>No results.</i></p>
}
